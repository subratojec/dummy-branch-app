# .env.staging
ENV=staging
FLASK_ENV=production
LOG_LEVEL=info

POSTGRES_USER=stguser
POSTGRES_PASSWORD=stgpass
POSTGRES_DB=loans_staging

# Host port mapped to container 5432 (host side)
DB_PORT=5433
# Internal container Postgres port (normally 5432)
DB_INTERNAL_PORT=5432

API_PORT=8001

# disable dev mounts in staging
DEV_MOUNT=false

# explicit connection string (avoid compose-time interpolation issues)
DATABASE_URL=postgresql://stguser:stgpass@db:5432/loans_staging
